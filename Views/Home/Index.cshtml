@{
    ViewData["Title"] = "MediCare - Online Healthcare Appointment System";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Welcome to MediCare</h1>
                <p class="lead">Your trusted healthcare provider in Sri Lanka</p>
                <p class="mb-4">Quality healthcare services with convenient online appointment booking for general medicine, pediatrics, cardiology, and dermatology.</p>
                <a href="#services" class="btn btn-light btn-lg me-3">Our Services</a>
                <a asp-controller="Doctors" asp-action="Index" class="btn btn-outline-light btn-lg">Find a Doctor</a>
            </div>
            <div class="col-lg-6 text-center">
                <img src="~/images/healthcare-hero.jpg" alt="Healthcare" class="img-fluid rounded" style="max-height: 400px;" />
            </div>
        </div>
    </div>
</div>

<!-- Sign-in Links Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-12">
            <h2 class="mb-4">Access Your Account</h2>
            <p class="text-muted mb-4">Sign in based on your role to access personalized features</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-danger">
                <div class="card-body text-center">
                    <i class="fas fa-user-shield fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Admin Portal</h5>
                    <p class="card-text">Manage doctors, patients, and system settings</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-danger btn-lg w-100">Admin Sign In</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body text-center">
                    <i class="fas fa-user-md fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Doctor Portal</h5>
                    <p class="card-text">Manage appointments and patient consultations</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-100">Doctor Sign In</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-success">
                <div class="card-body text-center">
                    <i class="fas fa-user fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Patient Portal</h5>
                    <p class="card-text">Book appointments and access medical records</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-lg w-100">Patient Sign In</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Company Information Section -->
<div class="bg-light py-5" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="mb-4">About MediCare Pvt Ltd</h2>
            </div>
        </div>
    </div>
</div>