@{
    ViewData["Title"] = "Doctor Dashboard - MediCare";
    var stats = ViewBag.Stats;
    var todayAppointments = ViewBag.TodayAppointments as List<MediCare.Models.APPOINTMENT>;
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4"><i class="fas fa-tachometer-alt me-2"></i>Doctor Dashboard</h2>
            <p class="text-muted">Welcome back, @Context.Session.GetString("UserName")!</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title">Today's Appointments</h6>
                            <h3 class="mb-0">@stats.TodayAppointments</h3>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-calendar-day fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title">Pending Appointments</h6>
                            <h3 class="mb-0">@stats.PendingAppointments</h3>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title">Confirmed Appointments</h6>
                            <h3 class="mb-0">@stats.ConfirmedAppointments</h3>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h6 class="card-title">Total Patients</h6>
                            <h3 class="mb-0">@stats.TotalPatients</h3>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Quick Actions -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Appointments" class="btn btn-outline-primary">
                            <i class="fas fa-calendar-alt me-2"></i>View All Appointments
                        </a>
                        <a asp-action="Profile" class="btn btn-outline-success">
                            <i class="fas fa-user-edit me-2"></i>Update Profile
                        </a>
                        <a asp-action="ManageSchedules" class="btn btn-outline-info">
                            <i class="fas fa-clock me-2"></i>Manage Schedule
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Appointments -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-day me-2"></i>Today's Appointments</h5>
                </div>
                <div class="card-body">
                    @if (todayAppointments != null && todayAppointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>Patient</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in todayAppointments)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-clock me-1"></i>
                                                @appointment.SCHEDULED_AT.ToString("HH:mm")
                                            </td>
                                            <td>
                                                <i class="fas fa-user me-1"></i>
                                                @appointment.PATIENT?.USER?.FULL_NAME
                                            </td>
                                            <td>
                                                @if (appointment.STATUS == "Pending")
                                                {
                                                    <span class="badge bg-warning">@appointment.STATUS</span>
                                                }
                                                else if (appointment.STATUS == "Confirmed")
                                                {
                                                    <span class="badge bg-success">@appointment.STATUS</span>
                                                }
                                                else if (appointment.STATUS == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">@appointment.STATUS</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@appointment.STATUS</span>
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.STATUS == "Pending")
                                                {
                                                    <form method="post" asp-action="UpdateAppointmentStatus" style="display:inline;">
                                                        <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                        <input type="hidden" name="status" value="Confirmed" />
                                                        <button type="submit" class="btn btn-sm btn-success" title="Confirm">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    </form>
                                                    <form method="post" asp-action="UpdateAppointmentStatus" style="display:inline;">
                                                        <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                        <input type="hidden" name="status" value="Cancelled" />
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Cancel">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-calendar-times fa-3x mb-3"></i>
                            <p>No appointments scheduled for today.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>