@model IEnumerable<MediCare.Models.APPOINTMENT>
@{
    ViewData["Title"] = "My Appointments - Doctor Dashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4"><i class="fas fa-calendar-alt me-2"></i>My Appointments</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>All Appointments</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Patient</th>
                                        <th>Contact</th>
                                        <th>Status</th>
                                        <th>Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-calendar me-1"></i>
                                                @appointment.SCHEDULED_AT.ToString("MMM dd, yyyy")
                                                <br>
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    @appointment.SCHEDULED_AT.ToString("hh:mm tt")
                                                </small>
                                            </td>
                                            <td>
                                                <strong>@appointment.PATIENT?.USER?.FULL_NAME</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.PATIENT?.USER?.PHONE))
                                                {
                                                    <i class="fas fa-phone me-1"></i>@appointment.PATIENT.USER.PHONE
                                                    <br>
                                                }
                                                <small class="text-muted">
                                                    <i class="fas fa-envelope me-1"></i>@appointment.PATIENT?.USER?.EMAIL
                                                </small>
                                            </td>
                                            <td>
                                                @if (appointment.STATUS == "Pending")
                                                {
                                                    <span class="badge bg-warning">@appointment.STATUS</span>
                                                }
                                                else if (appointment.STATUS == "Confirmed")
                                                {
                                                    <span class="badge bg-success">@appointment.STATUS</span>
                                                }
                                                else if (appointment.STATUS == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">@appointment.STATUS</span>
                                                }
                                                else if (appointment.STATUS == "Completed")
                                                {
                                                    <span class="badge bg-info">@appointment.STATUS</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@appointment.STATUS</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.NOTES))
                                                {
                                                    <small>@appointment.NOTES</small>
                                                }
                                                else
                                                {
                                                    <em class="text-muted">No notes</em>
                                                }
                                            </td>
                                            <td>
                                                <!-- Status Actions -->
                                                @if (appointment.STATUS == "Pending")
                                                {
                                                    <div class="btn-group" role="group">
                                                        <form method="post" asp-action="UpdateAppointmentStatus" style="display:inline;">
                                                            <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                            <input type="hidden" name="status" value="Confirmed" />
                                                            <button type="submit" class="btn btn-sm btn-success" title="Confirm">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                        <form method="post" asp-action="UpdateAppointmentStatus" style="display:inline;">
                                                            <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                            <input type="hidden" name="status" value="Cancelled" />
                                                            <button type="submit" class="btn btn-sm btn-danger" title="Cancel">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                }
                                                else if (appointment.STATUS == "Confirmed" && appointment.SCHEDULED_AT.Date <= DateTime.Today)
                                                {
                                                    <form method="post" asp-action="UpdateAppointmentStatus" style="display:inline;">
                                                        <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                        <input type="hidden" name="status" value="Completed" />
                                                        <button type="submit" class="btn btn-sm btn-info" title="Mark as Completed">
                                                            <i class="fas fa-check-double"></i>
                                                        </button>
                                                    </form>
                                                }

                                                <!-- Notes Modal Button -->
                                                <button type="button" class="btn btn-sm btn-outline-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#notesModal@(appointment.APPOINTMENT_ID)"
                                                        title="Add/Edit Notes">
                                                    <i class="fas fa-sticky-note"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- Render all modals outside the table for each appointment -->
                        @foreach (var appointment in Model)
                        {
                            <div class="modal fade" id="notesModal@(appointment.APPOINTMENT_ID)" tabindex="-1" aria-labelledby="notesModalLabel@(appointment.APPOINTMENT_ID)" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="notesModalLabel@(appointment.APPOINTMENT_ID)">Consultation Notes</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form method="post" asp-action="AddConsultationNotes">
                                            <div class="modal-body">
                                                <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                <div class="mb-3">
                                                    <label class="form-label">Patient: @appointment.PATIENT?.USER?.FULL_NAME</label>
                                                    <label class="form-label">Date: @appointment.SCHEDULED_AT.ToString("MMM dd, yyyy")</label>
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Consultation Notes</label>
                                                    <textarea name="notes" class="form-control" rows="5" placeholder="Enter consultation notes, diagnosis, prescriptions, etc.">@appointment.NOTES</textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Save Notes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-calendar-times fa-4x mb-3"></i>
                            <h5>No Appointments Yet</h5>
                            <p>Appointments booked by patients will appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>