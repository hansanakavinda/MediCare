@model IEnumerable<MediCare.Models.APPOINTMENT>
@{
    ViewData["Title"] = "My Appointments - Doctor Dashboard";
    var appointments = Model.ToList();
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4"><i class="fas fa-calendar-alt me-2"></i>My Appointments</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>All Appointments</h5>
                </div>
                <div class="card-body">
                    @if (appointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Patient</th>
                                        <th>Contact</th>
                                        <th>Status</th>
                                        <th>Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in appointments)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-calendar me-1"></i>
                                                @appointment.SCHEDULED_AT.ToString("MMM dd, yyyy")
                                                <br>
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    @appointment.SCHEDULED_AT.ToString("hh:mm tt")
                                                </small>
                                            </td>
                                            <td>
                                                <strong>@appointment.PATIENT?.USER?.FULL_NAME</strong>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.PATIENT?.USER?.PHONE))
                                                {
                                                    <i class="fas fa-phone me-1"></i>@appointment.PATIENT.USER.PHONE
                                                    <br>
                                                }
                                                <small class="text-muted">
                                                    <i class="fas fa-envelope me-1"></i>@appointment.PATIENT?.USER?.EMAIL
                                                </small>
                                            </td>
                                            <td>
                                                @if (appointment.STATUS == "Pending")
                                                {
                                                    <span class="badge bg-warning">@appointment.STATUS</span>
                                                }
                                                else if (appointment.STATUS == "Confirmed")
                                                {
                                                    <span class="badge bg-success">@appointment.STATUS</span>
                                                }
                                                else if (appointment.STATUS == "Cancelled")
                                                {
                                                    <span class="badge bg-danger">@appointment.STATUS</span>
                                                }
                                                else if (appointment.STATUS == "Completed")
                                                {
                                                    <span class="badge bg-info">@appointment.STATUS</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@appointment.STATUS</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.NOTES))
                                                {
                                                    <small>@appointment.NOTES</small>
                                                }
                                                else
                                                {
                                                    <em class="text-muted">No notes</em>
                                                }
                                            </td>
                                            <td>
                                                <!-- Status Actions -->
                                                @if (appointment.STATUS == "Pending")
                                                {
                                                    <div class="btn-group" role="group">
                                                        <form method="post" asp-action="UpdateAppointmentStatus" style="display:inline;">
                                                            <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                            <input type="hidden" name="status" value="Confirmed" />
                                                            <button type="submit" class="btn btn-sm btn-success" title="Confirm">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                        <form method="post" asp-action="UpdateAppointmentStatus" style="display:inline;">
                                                            <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                            <input type="hidden" name="status" value="Cancelled" />
                                                            <button type="submit" class="btn btn-sm btn-danger" title="Cancel">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                }
                                                else if (appointment.STATUS == "Confirmed" && appointment.SCHEDULED_AT.Date <= DateTime.Today)
                                                {
                                                    <form method="post" asp-action="UpdateAppointmentStatus" style="display:inline;">
                                                        <input type="hidden" name="appointmentId" value="@appointment.APPOINTMENT_ID" />
                                                        <input type="hidden" name="status" value="Completed" />
                                                        <button type="submit" class="btn btn-sm btn-info" title="Mark as Completed">
                                                            <i class="fas fa-check-double"></i>
                                                        </button>
                                                    </form>
                                                }

                                                <!-- Prescription Modal Button -->
                                                <button type="button" class="btn btn-sm btn-outline-success"
                                                        onclick="openPrescriptionModal(@appointment.APPOINTMENT_ID)"
                                                        title="Add/Edit Prescription">
                                                    <i class="fas fa-prescription-bottle-alt"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-calendar-times fa-4x mb-3"></i>
                            <h5>No Appointments Yet</h5>
                            <p>Appointments booked by patients will appear here.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Single Prescription Modal -->
<div class="modal fade" id="prescriptionModal" tabindex="-1" aria-labelledby="prescriptionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="AddOrEditPrescription">
                <div class="modal-header">
                    <h5 class="modal-title" id="prescriptionModalLabel">Prescription</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="closePrescriptionModal()"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="modalAppointmentId" name="appointmentId" value="" />
                    <div class="mb-3">
                        <label class="form-label" id="modalPatient"></label>
                        <label class="form-label" id="modalDate"></label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Prescription Content</label>
                        <textarea id="modalContent" name="content" class="form-control" rows="5" placeholder="Enter prescription details..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="closePrescriptionModal()">Close</button>
                    <button type="submit" class="btn btn-success">Save Prescription</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Store all appointments in a JS object for quick lookup
    var appointments = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        Model.Select(a => new {
            id = a.APPOINTMENT_ID,
            patient = a.PATIENT?.USER?.FULL_NAME,
            date = a.SCHEDULED_AT.ToString("MMM dd, yyyy"),
            content = a.PRESCRIPTIONs?.FirstOrDefault()?.CONTENT ?? ""
        })
    ));

    function openPrescriptionModal(appointmentId) {
        var appt = appointments.find(a => a.id === appointmentId);
        if (!appt) return;

        document.getElementById('modalAppointmentId').value = appt.id;
        document.getElementById('modalPatient').innerText = "Patient: " + (appt.patient || "");
        document.getElementById('modalDate').innerText = "Date: " + (appt.date || "");
        document.getElementById('modalContent').value = appt.content || "";

        var modal = new bootstrap.Modal(document.getElementById('prescriptionModal'));
        modal.show();
    }

    function closePrescriptionModal() {
        // Optionally clear modal fields if needed
        document.getElementById('modalAppointmentId').value = "";
        document.getElementById('modalPatient').innerText = "";
        document.getElementById('modalDate').innerText = "";
        document.getElementById('modalContent').value = "";
    }
</script>
}
